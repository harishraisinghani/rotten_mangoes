<%= form_for @movie do |f| %>
  <div class="form-field">
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div class="form-field">
    <%= f.label "director" %><br>
    <%= f.text_field "director" %>
  </div>
  <div class="form-field">
    <%= f.label "description" %><br>
    <%= f.text_area "description" %>
  </div>
  <div class="form-field">
    <%= f.label "Movie image URL" %><br>
    <%= f.text_field "post_image_url" %>
  </div>
  <div class="form-field">
    <%= f.label "Release date" %><br>
    <%= f.date_field "description" %>
  </div>
  <div class="form-field">
    <%= f.label "Runtime in minutes" %><br>
    <%= f.number_field "runtime_in_minutes" %>
  </div>

  <div class="form-field">
    <%= f.submit "Save" %> 
  </div>
<% end %>